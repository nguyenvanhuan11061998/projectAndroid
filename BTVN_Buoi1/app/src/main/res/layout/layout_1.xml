<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#9E299E">

        <LinearLayout
            android:id="@+id/ln_1"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#99F00E5D"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#C812AEBD"
            android:layout_below="@+id/ln_1"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="là"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_2"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#69EC1D"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="là"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#FCD7DD37"
            android:layout_above="@+id/ln_2"
            android:layout_marginLeft="240dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tiền"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#55E076">
        <LinearLayout
            android:id="@+id/ln_3"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#F8F0CA0E"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trong xã hội"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_4"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#F54D18"
            android:orientation="horizontal"
            android:layout_above="@+id/ln_3"
            android:layout_marginLeft="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="của tôi"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_5"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#CECEC7"
            android:orientation="horizontal"
            android:layout_above="@+id/ln_4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="địa vị"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_6"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#F8F6F6"
            android:orientation="horizontal"
            android:layout_above="@+id/ln_5"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="là"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="#E9D03C"
            android:orientation="horizontal"
            android:layout_above="@+id/ln_6"
            android:layout_marginLeft="160dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Công việc"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>