<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/leftarrow"
            android:background="#9C27B0"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#9C27B0"
            android:text="App Setting"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textColor="#F6F7F8"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/restaurant"
            android:paddingBottom="110dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Monning Pizza"
                android:textSize="35dp"
                android:paddingTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="FORCE STOP"/>
                <Button
                    android:layout_toRightOf="@+id/btn1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="UNINSTAL"
                    android:background="#F44336"/>
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Show notifications"
                android:paddingRight="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/menu"
            android:paddingBottom="250dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Storage"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Total"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:text="11.64 MB"
                android:textSize="50dp"
                android:textStyle="bold"
                android:paddingTop="20dp"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="50"
                android:secondaryProgress="100"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="CREATE DATA"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rounddatausagesymbol"
            android:padding="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Data Usage"
            android:textSize="25dp"
            android:paddingTop="20dp"/>
    </LinearLayout>

</LinearLayout>